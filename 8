using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp14
{
    internal class Program
    {
        static void Main(string[] args)
        {
            const string Password = "lox";

            bool isAccesAllowed = false;
            int maxTriesValue = 3;

            for (int i = 0; i < maxTriesValue; i++)
            {
                Console.WriteLine("Введите пароль:\n");
                string passwordInput = Console.ReadLine();

                if (passwordInput == Password)
                {
                    isAccesAllowed = true;
                    break;
                }
                else if ((passwordInput == Password) == false && i < maxTriesValue)
                {
                    Console.WriteLine("\nВведён неверный пароль\n\nНажмите любую клавишу...\n");
                    Console.ReadKey();
                    Console.Clear();
                }
            }

            if (isAccesAllowed)
            {
                Console.Clear();
                Console.WriteLine("Доступ к данным открыт. Ссылка на секретный материал: https://www.youtube.com/watch?v=dQw4w9WgXcQ\n");
            }
            else
            {
                Console.Clear();
                Console.WriteLine("Данные заблокированы\n");
            }
        }
    }
}
