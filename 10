using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp16
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            double baseNumber = 2;
            double numberInDegree;
            double exponent;
            int minRandomValue = 0;
            int maxRandomValue = 100;
            int comparedNumber = random.Next(minRandomValue, maxRandomValue);
            Console.WriteLine($"Наше случайное число: {comparedNumber}\n");
            bool isContinue = true;

            for (int i = 0; isContinue; i++)
            {
                exponent = Convert.ToDouble(i);
                numberInDegree = Math.Pow(baseNumber, exponent);

                if (numberInDegree > comparedNumber)
                {
                    Console.WriteLine($"Минимальная степень, в которой число {baseNumber} превосходит число {comparedNumber} - {i}. " +
                        $"{baseNumber} в степени {i} = {numberInDegree}\n");
                    isContinue = false;
                }
            }
        }
    }
}
