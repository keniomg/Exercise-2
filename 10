using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp16
{
    internal class Program
    {
        static void Main(string[] args)
        {
            const int MinRandomValue = 0;
            const int MaxRandomValue = 100;
            const int BaseNumber = 2;

            Convert.ToDouble(BaseNumber);
            Random randomNumber = new Random();
            int comparedNumber = randomNumber.Next(MinRandomValue, MaxRandomValue);
            Console.WriteLine($"Наше случайное число: {comparedNumber}\n");
            double numberInDegree;
            double exponent;
            bool isContinue = true;

            for (int i = 0; isContinue; i++)
            {
                exponent = Convert.ToDouble(i);
                numberInDegree = Math.Pow(BaseNumber, exponent);

                if (numberInDegree > comparedNumber)
                {
                    Console.WriteLine($"Минимальная степень, в которой число {BaseNumber} превосходит число {comparedNumber} - {i}. " +
                        $"{BaseNumber} в степени {i} = {numberInDegree}\n");
                    isContinue = false;
                }
            }
        }
    }
}
