using System.Collections;
using System;
using System.Text;
namespace lessons
{
    class program
    {
        static void Main()
        {
            Console.WriteLine("Введите повторяемое сообщение:");
            string message = Console.ReadLine();
            Console.WriteLine("Введите число повторений:");
            int repeatsCount = Convert.ToInt32(Console.ReadLine());

            while (repeatsCount-- > 0)
            {
                Console.WriteLine(message);
            }
        }
    }
}
