using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp15
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int minRandomValue = 1;
            int maxRandomValue = 27;
            int minDividingRangeValue = 100;
            int maxDividingRangeValue = 999;
            int multipleNThreeDigitNumber = 0;
            Random random = new Random();
            int dividerN = random.Next(minRandomValue, maxRandomValue + 1);
            Console.WriteLine($"Число N = {dividerN}\n");

            for (int i = 0; i <= maxDividingRangeValue; i += dividerN)
            {
                if (i >= minDividingRangeValue)
                {
                    multipleNThreeDigitNumber++;
                    Console.WriteLine($"\nЧисло {i} кратно числу {dividerN}");
                    Console.WriteLine($"Теперь чисел, кратных {dividerN}: {multipleNThreeDigitNumber}\n");
                }
            }

            Console.WriteLine($"Всего чисел, кратных {dividerN}: {multipleNThreeDigitNumber}");
        }
    }
}
