using System.Collections;
using System;
using System.Text;
namespace lessons
{
    class program
    {
        static void Main()
        {
            int firstDivisor = 3;
            int secondDivisor = 5;
            int minimumRandomValue = 0;
            int maximumRandomValue = 12;
            Random random = new Random();
            int number = random.Next(minimumRandomValue, maximumRandomValue);
            Console.WriteLine($"Наше случайное число: {number}");
            int sumMultiples = 0;

            for (int i = 0; i <= number; i++)
            {

                if (i > 0 && (i % firstDivisor == 0 || i % secondDivisor == 0))
                {
                    sumMultiples += i;
                    Console.WriteLine(i);
                }
            }

            Console.WriteLine($"Сумма всех кратных '{firstDivisor}' и '{secondDivisor}' чисел: {sumMultiples}");
        }
    }
}
