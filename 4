using System.Collections;
using System;
using System.Text;
namespace lessons
{
    class program
    {
        static void Main()
        {
            int comparedNumber = 0;
            int multipleThree = 3;
            int multipleFive = 5;
            int minimumRandomValue = 0;
            int maximumRandomValue = 101;
            Random random = new Random();
            int number = random.Next(minimumRandomValue, maximumRandomValue);
            Console.WriteLine($"Наше случайное число: {number}");
            int totalNumber = number;

            for (int i = 0; i < number; i++)
            {
                comparedNumber += 1;

                if (comparedNumber % multipleThree == 0 || comparedNumber % multipleFive == 0)
                {
                    Console.WriteLine(comparedNumber);
                    totalNumber += comparedNumber;
                }
            }

            Console.WriteLine(totalNumber);
        }
    }
}
