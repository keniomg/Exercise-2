using System.Collections;
using System;
using System.Text;
namespace lessons
{
    class program
    {
        static void Main()
        {
            string exitMessage = "exit";
            Console.Write("Введите текст: ");

            while (Console.ReadLine() != exitMessage)
            {
                Console.Write("Введите текст: ");
            }
        }
    }
}
