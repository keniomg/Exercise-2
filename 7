using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp13
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string border = null;
            Console.WriteLine("Введите ваше имя:\n");
            string userName = Console.ReadLine();
            Console.Clear();
            Console.WriteLine("Введите символ, используемый для обрамления вашего имени:\n");
            char bordersCharacter = Console.ReadKey(true).KeyChar;
            Console.Clear();
            string stringWithName = $"{bordersCharacter}{userName}{bordersCharacter}";

            for (int i = 0; i < stringWithName.Length; i++)
            {
                border += bordersCharacter;
            }

            Console.WriteLine(border);
            Console.WriteLine(stringWithName);
            Console.WriteLine(border + "\n");
        }
    }
}
