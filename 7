using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp13
{
    internal class Program
    {
        static void Main(string[] args)
        {
            const int BordersThickness = 1;
            const int NumberWidthBorders = 2;

            Console.WriteLine("Введите ваше имя:\n");
            string userName = Console.ReadLine();
            Console.Clear();
            Console.WriteLine("Введите символ, используемый для обрамления вашего имени:\n");
            char bordersCharacter = Convert.ToChar(Console.ReadLine());
            Console.Clear();
            int bordersWidth = userName.Length + BordersThickness*NumberWidthBorders;

            for (int i = 0; i < bordersWidth; i++)
            {
                Console.Write(bordersCharacter);
            }

            Console.WriteLine($"\n{bordersCharacter}{userName}{bordersCharacter}");

            for (int i = 0; i < bordersWidth; i++)
            {
                Console.Write(bordersCharacter);
            }

            Console.WriteLine();
        }
    }
}
